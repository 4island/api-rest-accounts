{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "Node",
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./build",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}